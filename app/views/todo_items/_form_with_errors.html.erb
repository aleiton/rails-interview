<div class="mb-6" id="new_item_form">
  <%= form_with model: [todo_list, todo_item], url: todo_list_todo_items_path(todo_list),
      class: "flex gap-2" do |f| %>
    <%= f.text_field :description, placeholder: "Add a new item...",
        value: todo_item.description,
        class: "flex-1 min-w-0 border border-coral rounded px-4 py-2 text-sm
               focus:outline-none focus:ring-2 focus:ring-coral" %>
    <%= f.submit "Add",
        class: "bg-primary hover:bg-primary/80 text-white px-6 py-2
               rounded text-sm font-medium cursor-pointer" %>
  <% end %>
  <% if todo_item.errors.any? %>
    <p class="text-coral text-xs mt-1"><%= todo_item.errors.full_messages.first %></p>
  <% end %>
</div>
