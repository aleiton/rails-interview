<div class="flex h-screen" data-controller="sidebar">
  <div class="fixed inset-0 bg-black/50 z-20 hidden md:hidden"
       data-sidebar-target="overlay"
       data-action="click->sidebar#close">
  </div>

  <aside class="w-[280px] bg-dark text-white flex-shrink-0 flex flex-col
                fixed md:relative z-30 h-full
                -translate-x-full md:translate-x-0 transition-transform"
         data-sidebar-target="panel">
    <%= render "sidebar", todo_lists: @todo_lists, selected_list: @todo_list %>
  </aside>

  <main class="flex-1 overflow-y-auto">
    <button class="md:hidden fixed top-4 left-4 z-10 bg-dark text-white p-2 rounded"
            data-action="click->sidebar#toggle"
            data-sidebar-target="hamburger">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
           viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <turbo-frame id="main_content">
      <%= render "main_content", todo_list: @todo_list %>
    </turbo-frame>
  </main>
</div>
