<div class="p-4 border-b border-gray-700">
  <h1 class="text-xl font-bold">Todo Lists</h1>
</div>

<div class="p-4 border-b border-gray-700">
  <%= form_with model: TodoList.new, url: todo_lists_path, id: "new_todo_list", class: "flex gap-2" do |f| %>
    <%= f.text_field :name, placeholder: "New list name...",
        class: "flex-1 bg-gray-700 text-white rounded px-3 py-2 text-sm
               placeholder-gray-400 focus:outline-none focus:ring-2
               focus:ring-primary" %>
    <%= f.submit "Add", class: "bg-primary hover:bg-primary/80 text-white
                                px-4 py-2 rounded text-sm cursor-pointer" %>
  <% end %>
</div>

<nav class="flex-1 overflow-y-auto" id="todo_lists">
  <%= render partial: "todo_lists/todo_list",
             collection: todo_lists,
             locals: { selected_list: selected_list } %>
</nav>
